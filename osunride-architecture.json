    "deploymentInstructions": {
      "prerequisites": {
        "nodeVersion": "20.x",
        "packageManager": "npm or yarn",
        "database": "PostgreSQL 15+",
        "cache": "Redis 7+",
        "storage": "AWS S3 or Cloudinary account"
      },
      "environmentVariables": {
        "database": [
          "DATABASE_URL=postgresql://username:password@localhost:5432/osunride",
          "REDIS_URL=redis://localhost:6379"
        ],
        "authentication": ["JWT_SECRET=your-jwt-secret-key", "JWT_EXPIRES_IN=7d", "BCRYPT_ROUNDS=12"],
        "thirdPartyServices": [
          "MAPS_API_KEY=your-maps-api-key",
          "PAYMENT_SECRET_KEY=your-payment-secret-key",
          "PAYMENT_PUBLIC_KEY=your-payment-public-key",
          "SMS_ACCOUNT_SID=your-sms-account-sid",
          "SMS_AUTH_TOKEN=your-sms-auth-token",
          "EMAIL_API_KEY=your-email-api-key"
        ],
        "storage": [
          "AWS_ACCESS_KEY_ID=your-aws-access-key",
          "AWS_SECRET_ACCESS_KEY=your-aws-secret-key",
          "AWS_REGION=us-east-1",
          "AWS_S3_BUCKET=osunride-documents"
        ],
        "government": ["GOVERNMENT_API_KEY=your-government-api-key", "GOVERNMENT_API_URL=https://api.osunstate.gov.ng"]
      },
      "steps": [
        {
          "step": 1,
          "title": "Clone Repository",
          "commands": ["git clone https://github.com/osunride/platform.git", "cd platform"]
        },
        {
          "step": 2,
          "title": "Install Dependencies",
          "commands": ["npm install", "cd frontend && npm install", "cd ../mobile && npm install"]
        },
        {
          "step": 3,
          "title": "Setup Database",
          "commands": ["createdb osunride", "npx prisma migrate deploy", "npx prisma db seed"]
        },
        {
          "step": 4,
          "title": "Configure Environment",
          "commands": ["cp .env.example .env", "# Edit .env with your configuration", "source .env"]
        },
        {
          "step": 5,
          "title": "Start Development Servers",
          "commands": ["npm run dev:backend", "npm run dev:frontend", "npm run dev:mobile"]
        }
      ],
      "production": {
        "frontend": {
          "platform": "Vercel",
          "buildCommand": "npm run build",
          "outputDirectory": ".next",
          "environmentVariables": ["NEXT_PUBLIC_API_URL", "NEXT_PUBLIC_MAPS_API_KEY", "NEXT_PUBLIC_PAYMENT_PUBLIC_KEY"]
        },
        "backend": {
          "platform": "Railway",
          "buildCommand": "npm run build",
          "startCommand": "npm start",
          "healthCheck": "/api/health"
        },
        "mobile": {
          "ios": "App Store Connect",
          "android": "Google Play Console",
          "buildTool": "EAS Build"
        }
      }
    },

