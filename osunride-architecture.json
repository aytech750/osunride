{
  "project": {
    "name": "OsunRide",
    "version": "2.0.0",
    "description": "Government-endorsed ride-hailing platform for Osun State, Nigeria",
    "tagline": "Your Ride, Right Here in Osun State",
    "mission": "Connecting communities, empowering drivers, and driving economic growth across the State of the Living Spring",
    "vision": "To become Nigeria's premier hyper-local transportation platform, starting with Osun State",
    "values": ["Community First", "Safety & Security", "Economic Empowerment", "Cultural Sensitivity", "Innovation"],

    "branding": {
      "primaryColors": {
        "orange": "#EA580C",
        "blue": "#2563EB",
        "green": "#16A34A"
      },
      "secondaryColors": {
        "gray": "#6B7280",
        "white": "#FFFFFF",
        "black": "#111827"
      },
      "logo": {
        "primary": "/images/osun-state-logo.png",
        "favicon": "/favicon.ico",
        "variants": ["light", "dark", "monochrome"]
      },
      "typography": {
        "primary": "Inter",
        "secondary": "Poppins",
        "accent": "Playfair Display"
      }
    },

