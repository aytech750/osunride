    "database": {
      "type": "PostgreSQL",
      "version": "15.0",
      "tables": {
        "users": {
          "columns": [
            { "name": "id", "type": "UUID", "primaryKey": true, "default": "gen_random_uuid()" },
            { "name": "email", "type": "VARCHAR(255)", "unique": true, "notNull": true },
            { "name": "phone", "type": "VARCHAR(20)", "unique": true, "notNull": true },
            { "name": "password_hash", "type": "VARCHAR(255)", "notNull": true },
            { "name": "first_name", "type": "VARCHAR(100)", "notNull": true },
            { "name": "last_name", "type": "VARCHAR(100)", "notNull": true },
            { "name": "role", "type": "ENUM('passenger', 'driver', 'admin')", "notNull": true },
            { "name": "profile_picture", "type": "TEXT" },
            { "name": "date_of_birth", "type": "DATE" },
            { "name": "gender", "type": "ENUM('male', 'female', 'other')" },
            { "name": "is_verified", "type": "BOOLEAN", "default": false },
            { "name": "is_active", "type": "BOOLEAN", "default": true },
            { "name": "created_at", "type": "TIMESTAMP", "default": "CURRENT_TIMESTAMP" },
            { "name": "updated_at", "type": "TIMESTAMP", "default": "CURRENT_TIMESTAMP" }
          ],
          "indexes": [
            { "name": "idx_users_email", "columns": ["email"] },
            { "name": "idx_users_phone", "columns": ["phone"] },
            { "name": "idx_users_role", "columns": ["role"] }
          ]
        },

        "drivers": {
          "columns": [
            { "name": "id", "type": "UUID", "primaryKey": true, "default": "gen_random_uuid()" },
            { "name": "user_id", "type": "UUID", "foreignKey": "users.id", "notNull": true },
            { "name": "license_number", "type": "VARCHAR(50)", "unique": true, "notNull": true },
            { "name": "license_expiry", "type": "DATE", "notNull": true },
            { "name": "vehicle_type", "type": "ENUM('car', 'tricycle', 'motorcycle')", "notNull": true },
            { "name": "vehicle_make", "type": "VARCHAR(50)" },
            { "name": "vehicle_model", "type": "VARCHAR(50)" },
            { "name": "vehicle_year", "type": "INTEGER" },
            { "name": "vehicle_color", "type": "VARCHAR(30)" },
            { "name": "plate_number", "type": "VARCHAR(20)", "unique": true, "notNull": true },
            { "name": "insurance_number", "type": "VARCHAR(50)", "notNull": true },
            { "name": "insurance_expiry", "type": "DATE", "notNull": true },
            { "name": "status", "type": "ENUM('pending', 'approved', 'suspended', 'rejected')", "default": "pending" },
            { "name": "is_online", "type": "BOOLEAN", "default": false },
            { "name": "current_latitude", "type": "DECIMAL(10,8)" },
            { "name": "current_longitude", "type": "DECIMAL(11,8)" },
            { "name": "rating", "type": "DECIMAL(3,2)", "default": 5.0 },
            { "name": "total_rides", "type": "INTEGER", "default": 0 },
            { "name": "created_at", "type": "TIMESTAMP", "default": "CURRENT_TIMESTAMP" },
            { "name": "updated_at", "type": "TIMESTAMP", "default": "CURRENT_TIMESTAMP" }
          ],
          "indexes": [
            { "name": "idx_drivers_user_id", "columns": ["user_id"] },
            { "name": "idx_drivers_status", "columns": ["status"] },
            { "name": "idx_drivers_location", "columns": ["current_latitude", "current_longitude"] },
            { "name": "idx_drivers_online", "columns": ["is_online"] }
          ]
        },

        "passengers": {
          "columns": [
            { "name": "id", "type": "UUID", "primaryKey": true, "default": "gen_random_uuid()" },
            { "name": "user_id", "type": "UUID", "foreignKey": "users.id", "notNull": true },
            { "name": "emergency_contact_name", "type": "VARCHAR(100)" },
            { "name": "emergency_contact_phone", "type": "VARCHAR(20)" },
            { "name": "preferred_language", "type": "ENUM('english', 'yoruba')", "default": "english" },
            { "name": "accessibility_needs", "type": "TEXT" },
            { "name": "rating", "type": "DECIMAL(3,2)", "default": 5.0 },
            { "name": "total_rides", "type": "INTEGER", "default": 0 },
            { "name": "created_at", "type": "TIMESTAMP", "default": "CURRENT_TIMESTAMP" },
            { "name": "updated_at", "type": "TIMESTAMP", "default": "CURRENT_TIMESTAMP" }
          ],
          "indexes": [{ "name": "idx_passengers_user_id", "columns": ["user_id"] }]
        },

        "rides": {
          "columns": [
            { "name": "id", "type": "UUID", "primaryKey": true, "default": "gen_random_uuid()" },
            { "name": "passenger_id", "type": "UUID", "foreignKey": "passengers.id", "notNull": true },
            { "name": "driver_id", "type": "UUID", "foreignKey": "drivers.id" },
            { "name": "pickup_latitude", "type": "DECIMAL(10,8)", "notNull": true },
            { "name": "pickup_longitude", "type": "DECIMAL(11,8)", "notNull": true },
            { "name": "pickup_address", "type": "TEXT", "notNull": true },
            { "name": "destination_latitude", "type": "DECIMAL(10,8)", "notNull": true },
            { "name": "destination_longitude", "type": "DECIMAL(11,8)", "notNull": true },
            { "name": "destination_address", "type": "TEXT", "notNull": true },
            {
              "name": "vehicle_type",
              "type": "ENUM('economy', 'comfort', 'premium', 'tricycle', 'motorcycle')",
              "notNull": true
            },
            {
              "name": "status",
              "type": "ENUM('requested', 'accepted', 'arrived', 'started', 'completed', 'cancelled')",
              "default": "requested"
            },
            { "name": "fare_estimate", "type": "DECIMAL(10,2)" },
            { "name": "final_fare", "type": "DECIMAL(10,2)" },
            { "name": "distance_km", "type": "DECIMAL(8,2)" },
            { "name": "duration_minutes", "type": "INTEGER" },
            {
              "name": "payment_method",
              "type": "ENUM('cash', 'card', 'wallet', 'bank_transfer', 'ussd')",
              "notNull": true
            },
            {
              "name": "payment_status",
              "type": "ENUM('pending', 'completed', 'failed', 'refunded')",
              "default": "pending"
            },
            { "name": "scheduled_time", "type": "TIMESTAMP" },
            { "name": "requested_at", "type": "TIMESTAMP", "default": "CURRENT_TIMESTAMP" },
            { "name": "accepted_at", "type": "TIMESTAMP" },
            { "name": "started_at", "type": "TIMESTAMP" },
            { "name": "completed_at", "type": "TIMESTAMP" },
            { "name": "cancelled_at", "type": "TIMESTAMP" },
            { "name": "cancellation_reason", "type": "TEXT" },
            { "name": "special_instructions", "type": "TEXT" },
            { "name": "created_at", "type": "TIMESTAMP", "default": "CURRENT_TIMESTAMP" },
            { "name": "updated_at", "type": "TIMESTAMP", "default": "CURRENT_TIMESTAMP" }
          ],
          "indexes": [
            { "name": "idx_rides_passenger_id", "columns": ["passenger_id"] },
            { "name": "idx_rides_driver_id", "columns": ["driver_id"] },
            { "name": "idx_rides_status", "columns": ["status"] },
            { "name": "idx_rides_created_at", "columns": ["created_at"] },
            { "name": "idx_rides_pickup_location", "columns": ["pickup_latitude", "pickup_longitude"] },
            { "name": "idx_rides_destination_location", "columns": ["destination_latitude", "destination_longitude"] }
          ]
        },

        "payments": {
          "columns": [
            { "name": "id", "type": "UUID", "primaryKey": true, "default": "gen_random_uuid()" },
            { "name": "ride_id", "type": "UUID", "foreignKey": "rides.id", "notNull": true },
            { "name": "user_id", "type": "UUID", "foreignKey": "users.id", "notNull": true },
            { "name": "amount", "type": "DECIMAL(10,2)", "notNull": true },
            { "name": "currency", "type": "VARCHAR(3)", "default": "NGN" },
            {
              "name": "payment_method",
              "type": "ENUM('cash', 'card', 'wallet', 'bank_transfer', 'ussd')",
              "notNull": true
            },
            { "name": "transaction_id", "type": "VARCHAR(100)", "unique": true },
            { "name": "gateway_reference", "type": "VARCHAR(100)" },
            {
              "name": "status",
              "type": "ENUM('pending', 'processing', 'completed', 'failed', 'refunded')",
              "default": "pending"
            },
            { "name": "gateway_response", "type": "JSONB" },
            { "name": "commission_amount", "type": "DECIMAL(10,2)" },
            { "name": "driver_amount", "type": "DECIMAL(10,2)" },
            { "name": "processed_at", "type": "TIMESTAMP" },
            { "name": "created_at", "type": "TIMESTAMP", "default": "CURRENT_TIMESTAMP" },
            { "name": "updated_at", "type": "TIMESTAMP", "default": "CURRENT_TIMESTAMP" }
          ],
          "indexes": [
            { "name": "idx_payments_ride_id", "columns": ["ride_id"] },
            { "name": "idx_payments_user_id", "columns": ["user_id"] },
            { "name": "idx_payments_status", "columns": ["status"] },
            { "name": "idx_payments_transaction_id", "columns": ["transaction_id"] }
          ]
        },

        "reviews": {
          "columns": [
            { "name": "id", "type": "UUID", "primaryKey": true, "default": "gen_random_uuid()" },
            { "name": "ride_id", "type": "UUID", "foreignKey": "rides.id", "notNull": true },
            { "name": "reviewer_id", "type": "UUID", "foreignKey": "users.id", "notNull": true },
            { "name": "reviewee_id", "type": "UUID", "foreignKey": "users.id", "notNull": true },
            { "name": "rating", "type": "INTEGER", "notNull": true, "check": "rating >= 1 AND rating <= 5" },
            { "name": "comment", "type": "TEXT" },
            { "name": "review_type", "type": "ENUM('passenger_to_driver', 'driver_to_passenger')", "notNull": true },
            { "name": "created_at", "type": "TIMESTAMP", "default": "CURRENT_TIMESTAMP" },
            { "name": "updated_at", "type": "TIMESTAMP", "default": "CURRENT_TIMESTAMP" }
          ],
          "indexes": [
            { "name": "idx_reviews_ride_id", "columns": ["ride_id"] },
            { "name": "idx_reviews_reviewer_id", "columns": ["reviewer_id"] },
            { "name": "idx_reviews_reviewee_id", "columns": ["reviewee_id"] },
            { "name": "idx_reviews_rating", "columns": ["rating"] }
          ]
        },

        "wallets": {
          "columns": [
            { "name": "id", "type": "UUID", "primaryKey": true, "default": "gen_random_uuid()" },
            { "name": "user_id", "type": "UUID", "foreignKey": "users.id", "notNull": true, "unique": true },
